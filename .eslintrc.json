{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "prettier",
        "prettier/react",
        "plugin:react-hooks/recommended"
    ],
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "warn",
        "react/react-in-jsx-scope": "off",
        "no-use-before-define": "off",
        "react/prop-types": "off",
        "no-undef": "off"
    }
}